@model IEnumerable<DoeVidaWeb.ViewModels.OrganizacaoViewModel>

@{
    ViewData["Title"] = "Organização";
}

<div id="main">
    <div id="header-action">
        <div id="search">
            <input placeholder="Digite o nome da organização que deseja buscar"
                   type="text" name="search" id="input-search" />
            <i class="fas fa-search"></i>
        </div>
        <a asp-action="Create" id="button-new">Nova organização</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NomeOrganizacao)
                </th>
               
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeOrganizacao)
                    </td>
                    
                    <td id="actions">
                        <a class="icon-action" href="Doador/Details/@item.IdOrganizacao"><i class="fas fa-eye icon-action"></i></a>
                        <a class="icon-action" href="Doador/Edit/@item.IdOrganizacao"><i class="fas fa-edit icon-action"></i></a>
                        <a class="icon-action" href="Doador/Delete/@item.IdOrganizacao"><i class="fas fa-trash-alt icon-action"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>