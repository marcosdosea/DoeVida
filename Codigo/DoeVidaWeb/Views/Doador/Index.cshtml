@model IEnumerable<DoeVidaWeb.ViewModels.DoadorViewModel>

@{
    ViewData["Title"] = "Index";
}

<div id="main">
    <div id="header-action">
        <div id="search">
            <input placeholder="Digite o nome que deseja buscar"
                   type="text" name="search" id="input-search" />
            <i class="fas fa-search"></i>
        </div>
        <a asp-action="Create" id="button-new">Novo doador</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefone)
                    </td>
                    <td id="actions">
                        <a class="icon-action" href="Doador/Details/@item.IdPessoa"><i class="fas fa-eye icon-action"></i></a>
                        <a class="icon-action" href="Doador/Edit/@item.IdPessoa"><i class="fas fa-edit icon-action"></i></a>
                        <a class="icon-action" href="Doador/Delete/@item.IdPessoa"><i class="fas fa-trash-alt icon-action"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
