@model IEnumerable<DoeVidaWeb.ViewModels.ItemViewModel>

@{
    ViewData["Title"] = "Index";
}
<div id="header-action">
        <div id="search">
            <input placeholder="Digite o nome que deseja buscar"
                   type="text" name="search" id="input-search" />
            <i class="fas fa-search"></i>
        </div>
        <a asp-action="Create" id="button-new">Novo Item</a>
    </div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdOrganizacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdOrganizacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td id="actions">
               <a class="icon-action" href="Item/Details/@item.IdItem"><i class="fas fa-eye icon-action"></i></a>
               <a class="icon-action" href="Item/Edit/@item.IdItem"><i class="fas fa-edit icon-action"></i></a>
               <a class="icon-action" href="Item/Delete/@item.IdItem"><i class="fas fa-trash-alt icon-action"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
